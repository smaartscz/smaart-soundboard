{
  "name": "smaart_soundboard",
  "version": "1.0.0",
  "description": "Soundboard created in JavaScript",
  "main": "app.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smaartscz/electron-soundboard.git"
  },
  "keywords": [
    "electron",
    "soundboard"
  ],
  "author": "smaartscz",
  "license": "CC0-1.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "electron": "^22.1.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "electron-json-storage": "^4.6.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "build": {
    "appId": "smaart.soundboard",
    "win": {
      "icon": "/img/icon.png"
    },
    "extraResources": [
      {
        "from": "src/audio",
        "to": "../audio"
      },
      {
        "from": "src/cfg",
        "to": "../cfg"
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/smaartscz/electron-soundboard/issues"
  },
  "homepage": "https://github.com/smaartscz/electron-soundboard#readme"
}
